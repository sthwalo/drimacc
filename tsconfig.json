{
  "compilerOptions": {
    "target": "es2020", // Set to "es2020" for compatibility with both server and client code
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext", // Use "esnext" for client code
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Avoid emitting JavaScript code, suitable for React projects
    "jsx": "react-jsx",
    "outDir": "./dist", // Only needed if you plan to compile server code to an output directory
    "baseUrl": ".", // Set the base URL for relative module names
    "paths": {
      "@/*": ["src/*"] // Map all modules starting with '@/' to the 'src' directory
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}